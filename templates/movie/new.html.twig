{% extends 'base.html.twig' %}

{% block title %} Movie List!{% endblock %}

{% block body %}

<div class="container">
    <h2>Task Entry</h2>
    <hr/>
    {{ form_start(form) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(form) }}
        </div>
        <div class="row">
            <div class="col-md-6">

                <div class="form-group">
                    {{ form_label(form.title, null, {
                        'label': 'Title *',
                        'label_attr': {'class': 'form-label'}
                    }) }}
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                    <small>{{ form_help(form.title) }}</small>
                    <div class="form-error">
                        {{ form_errors(form.title) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.count, null, {
                        'label': 'Count *',
                        'label_attr': {'class': 'form-label'}
                    }) }}
                    {{ form_widget(form.count, {'attr': {'class': 'form-control'}}) }}
                    <small>{{ form_help(form.count) }}</small>
                    <div class="form-error">
                        {{ form_errors(form.count) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_row(form.submit, { 'label': 'Save', 'attr': {'class': 'btn btn-primary'}}) }}
                </div>
        </div>
      
    {{ form_end(form) }}
</div>
{% endblock %}